<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2E2E2E"
    tools:context=".ShowDonationDetailsActivity">

    <TextView
        android:id="@+id/tvFname"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="12sp"
        android:layout_marginRight="15dp"
        android:gravity="left|center_vertical"
        android:outlineProvider="bounds"
        android:text="First Name:"
        android:background="#353535"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvLname"
        android:layout_marginTop="12sp"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:layout_below="@+id/tvFname"
        android:gravity="left|center_vertical"
        android:text="Last Name:"
        android:background="#353535"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvAddress"
        android:layout_width="match_parent"
        android:layout_marginTop="12sp"
        android:layout_height="60sp"
        android:layout_below="@id/tvLname"
        android:gravity="left|center_vertical"
        android:text="Address:"
        android:background="#353535"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvCellNumber"
        android:layout_width="match_parent"
        android:layout_marginTop="12sp"
        android:layout_height="60sp"
        android:layout_below="@id/tvAddress"
        android:gravity="left|center_vertical"
        android:text="Cellphone Number:"
        android:background="#353535"
        android:textColor="@color/white"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvBiography"
        android:layout_width="match_parent"
        android:layout_height="204dp"
        android:layout_below="@id/tvShowItem"
        android:layout_marginTop="17sp"
        android:gravity="top|left"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:text="Biogaphy:"
        android:background="#353535"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvShowQuant"
        android:layout_width="wrap_content"
        android:layout_height="96dp"
        android:layout_below="@+id/tvCellNumber"
        android:layout_marginTop="12sp"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/tvShowItem"
        android:gravity="left|center_vertical"
        android:text="Quantity:"
        android:background="#353535"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvShowItem"
        android:layout_width="200sp"
        android:layout_height="96dp"
        android:layout_below="@+id/tvCellNumber"
        android:layout_marginTop="12sp"
        android:layout_alignParentLeft="true"
        android:gravity="left|center_vertical"
        android:text="Item:"
        android:background="#353535"
        android:textColor="@color/white"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/btnAccept"
        android:layout_width="wrap_content"
        android:layout_height="75sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="DONATE"
        android:textSize="20sp"
        android:layout_marginBottom="25sp"
        />
    <EditText
        android:id="@+id/etQuantityAcc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter Quantity"
        android:layout_alignParentBottom="true"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:layout_below="@id/tvBiography"
        android:layout_toLeftOf="@id/btnAccept"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="15dp"
        android:background="#353535"
        />

</RelativeLayout>